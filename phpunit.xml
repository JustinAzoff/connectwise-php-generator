<?xml version="1.0" encoding="UTF-8"?>
<phpunit addUncoveredFilesFromWhitelist="true"
         backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="bootstrap/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         processUncoveredFilesFromWhitelist="true"
         stopOnError="false"
         stopOnFailure="false"
         syntaxCheck="true"
         verbose="true"
        >
    <testsuites>
        <testsuite name="ConnectWise PHP Library Generator">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <listeners>
        <listener class="\Mockery\Adapter\Phpunit\TestListener"></listener>
    </listeners>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
            <exclude>
                <!-- This is all generated code, so we are not going to test it -->
                <directory suffix=".php">./src/Library/Api</directory>
                <!-- Exceptions, so we are not going to test it -->
                <directory suffix="Exception.php">./src</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="json" target="./build/logs/logfile.json"/>
        <log type="coverage-html" target="./build/coverage" title="ConnectWise PHP Library Generator"
             charset="UTF-8" yui="true" highlight="true"
             lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="./build/logs/clover.xml"/>
        <log type="junit" target="./build/logs/junit.xml"
             logIncompleteSkipped="false"/>
    </logging>
    <php>
        <!--<env name="KEY" value="VALUE"/>-->
    </php>
</phpunit>
